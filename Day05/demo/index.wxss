.swiper image{
  width:750rpx;
  height:316rpx;
}
.epub{
  margin:15rpx;
}
.epub-item{
  margin-bottom: 20rpx;
}
.epub-item-header{
  padding:10rpx 0;
  margin-bottom:15rpx;
  border-bottom:1rpx dotted #999;
  font-size:28rpx;
  font-family: 'Microsoft Yahei';
  font-weight: bold;
  letter-spacing: 6rpx;
}

.epub-booklist-item navigator{
  display: flex;
  align-items: center;
}
.epub-booklist-item{
  margin-bottom:15rpx;
}
.epub-booklist-item .cover{
  margin-right:15rpx;
}
.epub-booklist-item .cover image{
  width:120rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.epub-booklist-item .txt .title{
  margin-bottom:12rpx;
  font-size:26rpx;
  color:#333;
  font-family: 'Microsoft Yahei';
}
.epub-booklist-item .txt .desc{
  font-size:24rpx;
  line-height: 1.5em;
  height:70rpx;
  overflow: hidden;
  color:#666;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.epub-booklist-item .txt .author{
  margin-top:12rpx;
  font-size:22rpx;
  color:#666;
}